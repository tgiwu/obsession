<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mine.obsession.mappers.WorksMapper">
    <cache eviction="FIFO" size="1000"/>

    <sql id="works_select">
        ${alias}.id as works_id,
        ${alias}.works_title,
        ${alias}.chapter_count,
        ${alias}.works_content,
        ${alias}.create_date,
        ${alias}.update_date,
        ${alias}.works_path
    </sql>

    <select id="getWorksById" parameterType="String" resultType="com.mine.obsession.models.Works">
        select
        <include refid="works_select"><property name="alias" value="works"/></include>
        from works where id = #{id}
    </select>

    <select id="getAllWorks" resultType="com.mine.obsession.models.Works">
        select <include refid="works_select"><property name="alias" value="works"/></include>
        from works
    </select>

    <insert id="insertWorks" parameterType="com.mine.obsession.models.Works">
        insert into works (works_title, chapter_count, works_content, works_path)
        values (#{works_title}, #{chapter_count}, #{works_content}, #{works_path})
    </insert>

    <update id="updateWorks" parameterType="com.mine.obsession.models.Works">
        update works
        set works_title = #{works_title},
            chapter_count = #{chapter_count},
            works_content = #{works_content},
            works_path = #{works_path}
        where id = #{works_id}
    </update>

    <delete id="deleteWorks" parameterType="String">
        delete from works
        where id = #{works_id}
    </delete>
</mapper>